    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-uglify": "^6.0.2"
  },
  "peerDependencies": {
    "firebase": "^5.9.0"
  },
  "dependencies": {
    "firebase": "^5.9.0"
