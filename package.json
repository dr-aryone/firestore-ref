  "license": "MIT",
  "module": "./dist/firestore-ref.es.js",
  "browser": "./dist/firestore-ref.min.js",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.0.2",
    "rollup": "^1.6.0",
